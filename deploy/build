#!/usr/bin/env bash

#############################################################################
#                                                                           #
#     DO NOT EDIT THIS FILE BY HAND -- YOUR CHANGES WILL BE OVERWRITTEN     #
#                                                                           #
#############################################################################

# script exit when a command fails
set -o errexit
# catch a command error in pipe execution
set -o pipefail
# exit when try to use undeclared variables
# set -o nounset
# print and expand each command to stdout before executing it
set -o xtrace

if [ $# -eq 0 ]; then
  echo "Missing required argument: environment"
  exit 1
fi

export ENV=$1
export AWS_DEFAULT_REGION="eu-west-1"
export VERSION="${DRONE_TAG:-$DRONE_COMMIT_SHA}"

positional_version=$(grep -m1 '^version' positional/Cargo.toml | cut -d'"' -f2)
positional_derive_version=$(grep -m1 '^version' positional_derive/Cargo.toml | cut -d'"' -f2)
current_remote_version=''

if [[ "$DRONE_TAG" != "$positional_version" ]]; then
  echo "positional version $positional_version does not match release version $DRONE_TAG"
  exit 1
fi

if [[ "$DRONE_TAG" != "$positional_derive_version" ]]; then
  echo "positional_derive version $positional_derive_version does not match release version $DRONE_TAG"
  exit 1
fi

git checkout .

cargo install cargo-release --version "0.23.*"
cargo login "$CARGO_AUTH_KEY"
cargo release publish --execute --no-confirm --allow-branch "*" --workspace --all-features
